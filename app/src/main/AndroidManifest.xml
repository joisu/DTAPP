<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joycehsu.dtapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:label="Home"/>
        <activity
            android:name=".ReviewActivity"
            android:screenOrientation="portrait"
            android:label="Quiz"/>
        <activity
            android:name=".LearningActivity"
            android:screenOrientation="portrait"
            android:label="Design Thinking"/>
        <activity
            android:name=".BaseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:label="Settings"/>
        <activity
            android:name=".DetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewsActivity"
            android:screenOrientation="portrait"
            android:label="News"/>
        <activity
            android:name=".ActivitiesActivity"
            android:label="Activities"
            android:parentActivityName=".BaseActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.joycehsu.dtapp.BaseActivity" />
        </activity>

        <activity
            android:name=".Quiz.QuizActivity"
            android:screenOrientation="portrait"
            android:label="Quiz"/>
        <activity
            android:name=".Quiz.QuizReviewActivity"
            android:screenOrientation="portrait"
            android:label="Quiz"/>
        <activity
            android:name=".QuizStartActivity"
            android:screenOrientation="portrait"
            android:label="Quiz"/>
        <activity
            android:name=".DTWebView"
            android:screenOrientation="portrait"
            android:label="Activities"/>
        <activity android:name=".LearningLesson1" />
        <activity android:name=".LearningLesson2" />
        <activity android:name=".LearningLesson3" />
        <activity android:name=".LearningLesson4" />
    </application>

</manifest>