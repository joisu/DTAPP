<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="10dp"
    tools:context=".QuizStartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Test your learning!"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textview_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_startquiz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Highscore: N/A (Unattempted)"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button_startquiz"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="I'm ready!" />

    <Button
        android:id="@+id/button_home"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_startquiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Not yet!"
        android:textColor="@android:color/black" />

</RelativeLayout>